@model IEnumerable<Morgenmadsbuffet.Models.Buffet>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.roomNum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.adults)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.children)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.day)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CheckedInAdult)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CheckedInChildren)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.roomNum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.adults)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.children)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.day)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CheckedInAdult)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CheckedInChildren)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.orderId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.orderId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.orderId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
